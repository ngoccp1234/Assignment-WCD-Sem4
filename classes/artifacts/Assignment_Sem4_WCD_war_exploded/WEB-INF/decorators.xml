<?xml version="1.0" encoding="UTF-8"?>
<!--khai bao thu muc chua template-->
<decorators defaultdir="/decorators">

    <!--    nhung duong dan khong muon ap dung template nao-->
    <excludes>
        <pattern>/api*</pattern>
        <pattern>/ajax*</pattern>
    </excludes>


    <!--   tat ca nhung duong dan se ap dung template-->

    <decorator name="template" page="clientTemplate.jsp">
        <pattern>/*</pattern>
    </decorator>

    <!--    nhung duong dan co /admin se ap dung template adminTemplate-->
    <decorator name="admin" page="adminTemplate.jsp">
        <pattern>/admin*</pattern>
    </decorator>

    <decorator name="loginAdmin" page="loginAdminTemplate.jsp">
        <pattern>/admin-login</pattern>
    </decorator>
</decorators>